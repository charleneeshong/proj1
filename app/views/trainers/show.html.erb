<h3>Trainer</h3>

<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<table>
  <tr>
  	<th>Sprite</th>
    <th>Name</th>
    <th>Level</th>
    <th>Health</th>
    <th>Be Rude</th>
  </tr>
    <tr>
    <% @trainer.pokemons.each do |pokemon| %>
      <td><%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") if pokemon.ndex %></td>
      <td><%= pokemon.name %></td>
      <td><%= pokemon.level %></td>
      <td><%= pokemon.health %></td>
      <td><%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></td>
    </tr>
  <% end %>
</table>

<% if @trainer.id %>
	<% if @trainer.id == current_trainer.id %>
		<%= button_to "Create New Pokemon!", new_path, :class => "button medium", :method => :get %>
	<% end %>
<% end %>